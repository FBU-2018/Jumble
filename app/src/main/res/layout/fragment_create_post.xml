<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.CreatePostFragment">

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@android:color/background_dark" />

    <Button
        android:id="@+id/bCreateJob"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_border"
        android:text="Create job post"
        android:textColor="#ffede2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ibPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="130dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/button_rounded_corners"
        android:src="@drawable/ic_instagram_new_post"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="200dp"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="1"
        android:layout_alignEnd="@+id/bCreateJob"
        android:layout_alignTop="@+id/tvTitle"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:padding="5dp"
        android:layout_alignRight="@+id/bCreateJob" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="250dp"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="1"
        android:layout_alignEnd="@+id/bCreateJob"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:padding="5dp"
        android:layout_alignRight="@+id/bCreateJob" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="300dp"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bCreateJob"
        android:layout_alignTop="@+id/textView"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:padding="5dp"
        android:layout_alignRight="@+id/bCreateJob"
        android:focusable="false"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="350dp"
        android:text="Time"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etTime"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bCreateJob"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:padding="5dp"
        android:layout_alignRight="@+id/bCreateJob" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="400dp"
        android:text="Location"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnMap"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="1"
        android:layout_alignEnd="@+id/bCreateJob"
        android:layout_alignTop="@+id/tvLocation"
        android:background="@drawable/edittext_rounded_corners"
        android:padding="5dp"
        android:text="Current Location"
        android:textAlignment="textStart"
        android:textSize="15sp"/>
</RelativeLayout>