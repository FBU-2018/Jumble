<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.CreatePostFragment">

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@android:color/black" />

    <Button
        android:id="@+id/bCreateJob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMap"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/button_border"
        android:gravity="center"
        android:padding="5dp"
        android:text="CREATE"
        android:textAlignment="gravity"
        android:textColor="@color/colorMainLight"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ibPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="130dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/button_rounded_corners"
        android:src="@drawable/ic_instagram_new_post" />

    <EditText
        android:id="@+id/etEstimation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTime"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:hint="Time estimate?"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="1"
        android:padding="5dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:hint="What's the job?"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="1"
        android:padding="5dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etTitle"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:hint="Give me some details!"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="1"
        android:padding="5dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDescription"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:focusable="false"
        android:hint="Pick a date!"
        android:padding="5dp"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/etTime"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etDate"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:hint="Pick a time!"
        android:padding="5dp"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnMap"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etEstimation"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/edittext_rounded_corners"
        android:hint="Pick a location!"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="1"
        android:padding="5dp"
        android:textAlignment="textStart"
        android:textSize="15sp"
        style="@style/Base.Widget.AppCompat.Button.Borderless"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/etTitle"
        android:layout_toStartOf="@+id/etEstimation"
        android:paddingEnd="0dp"
        android:src="@drawable/ic_title" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/etDescription"
        android:layout_toStartOf="@+id/etEstimation"
        android:src="@drawable/ic_description" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/etEstimation"
        android:layout_toStartOf="@+id/etEstimation"
        android:src="@drawable/ic_timer" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/etDate"
        android:layout_toStartOf="@+id/etEstimation"
        android:src="@drawable/ic_date" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnMap"
        android:layout_toStartOf="@+id/etEstimation"
        android:src="@drawable/ic_edit_location" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/etTime"
        android:layout_toStartOf="@+id/etEstimation"
        android:src="@drawable/ic_time" />
</RelativeLayout>