<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.CreatePostFragment">

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="105dp"
        android:layout_height="104dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@android:color/background_dark" />

    <Button
        android:id="@+id/bCreateJob"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:background="@drawable/button_border"
        android:text="Create job post"
        android:textColor="#ffede2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ibPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="127dp"
        android:layout_marginTop="106dp"
        android:background="@drawable/button_rounded_corners"
        android:src="@drawable/ic_instagram_new_post" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bCreateJob"
        android:layout_alignTop="@+id/etTitle"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etEstimation"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bCreateJob"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="101dp"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="1"
        android:padding="5dp" />

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bCreateJob"
        android:layout_alignParentTop="true"
        android:layout_marginTop="154dp"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="1"
        android:padding="5dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bCreateJob"
        android:layout_alignTop="@+id/etDescription"
        android:text="Description"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bCreateJob"
        android:layout_alignParentTop="true"
        android:layout_marginTop="203dp"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="1"
        android:padding="5dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bCreateJob"
        android:layout_alignTop="@+id/etDate"
        android:text="Date"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bCreateJob"
        android:layout_centerVertical="true"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:focusable="false"
        android:padding="5dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bCreateJob"
        android:layout_alignTop="@+id/etTime"
        android:text="Time"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etTime"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bCreateJob"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="205dp"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:padding="5dp" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bCreateJob"
        android:layout_alignTop="@+id/btnMap"
        android:text="Location"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvEstimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bCreateJob"
        android:layout_alignTop="@+id/etEstimation"
        android:text="Time estimate"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnMap"
        android:layout_width="176dp"
        android:layout_height="37dp"
        android:layout_alignEnd="@+id/bCreateJob"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="151dp"
        android:background="@drawable/edittext_rounded_corners"
        android:inputType="textCapSentences|textMultiLine"
        android:maxLines="1"
        android:padding="5dp"
        android:text="Current Location"
        android:textAlignment="textStart"
        android:textSize="15sp" />
</RelativeLayout>