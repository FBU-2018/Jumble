<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView

        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        card_view:cardCornerRadius="3dp">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_jobNoMatchPic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                card_view:srcCompat="@drawable/button_rounded_corners" />

            <TextView
                android:id="@+id/tv_jobNoMatchesTitle"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_border_edittext"
                android:gravity="center"
                android:textColor="#c5d73889"
                app:autoSizeTextType="uniform" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/bv_jobNoMatchArrow"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                card_view:srcCompat="@mipmap/ic_arrow_2" />

        </android.support.v7.widget.LinearLayoutCompat>


    </android.support.v7.widget.CardView>
</RelativeLayout>


