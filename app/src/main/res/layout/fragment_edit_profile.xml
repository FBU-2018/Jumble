<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/action_edit_profile">

    <Button
        android:id="@+id/save_profile_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_border"
        android:text="Save"
        android:textColor="#e41fd8" />

    <ImageView
        android:id="@+id/edit_profile_iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@color/black" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="225dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/profile_name"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/save_profile_btn"
        android:layout_alignTop="@+id/tvTitle"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="225dp"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:padding="5dp"
        android:layout_alignRight="@+id/save_profile_btn" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="275dp"
        android:text="Institution"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/profile_institution"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/save_profile_btn"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:padding="5dp"
        android:layout_alignRight="@+id/save_profile_btn" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="325dp"
        android:text="Phone Number"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/profile_phone_number"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/save_profile_btn"
        android:layout_alignTop="@+id/textView"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:padding="5dp"
        android:layout_alignRight="@+id/save_profile_btn" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="375dp"
        android:text="Link to Social Media"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/profile_link"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/save_profile_btn"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:padding="5dp"
        android:layout_alignRight="@+id/save_profile_btn" />

    <ImageButton
        android:id="@+id/ib_profile_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="108dp"
        android:layout_marginTop="174dp"
        android:background="@drawable/button_rounded_corners"
        android:src="@drawable/ic_instagram_new_post"
        android:layout_marginRight="108dp"
        android:layout_alignParentRight="true" />

</RelativeLayout>