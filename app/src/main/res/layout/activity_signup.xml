<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignUpActivity">

    <ImageView
        android:id="@+id/iv_password_correct"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="234dp"
        android:layout_marginEnd="29dp"
        android:layout_marginTop="312dp"
        android:backgroundTint="@color/green_3"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/checkbox_on_background" />

    <EditText
        android:id="@+id/signup_password_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_username_et"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:hint="Create password"
        android:padding="5dp" />

    <EditText
        android:id="@+id/signup_username_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:hint="Create username"
        android:inputType="textPersonName"
        android:padding="5dp" />

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp"
        android:background="@drawable/button_border"
        android:text="Sign Up"
        android:textColor="@color/colorMainLight" />

    <ImageView
        android:id="@+id/iv_username_correct"
        android:layout_width="19dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/iv_password_correct"
        android:layout_marginEnd="29dp"
        android:layout_marginTop="257dp"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/checkbox_on_background" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/jumble" />
</RelativeLayout>