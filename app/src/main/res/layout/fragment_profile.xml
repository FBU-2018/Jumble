<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment"
    android:id="@+id/action_view_profile">

    <Button
        android:id="@+id/edit_profile_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_toStartOf="@+id/imageButton2"
        android:background="@drawable/button_border"
        android:padding="5dp"
        android:text="Edit"
        android:textColor="@color/colorMainLight" />

    <ImageView
        android:id="@+id/profile_iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@color/black" />

    <TextView
        android:id="@+id/tv_profile_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="210dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="Name" />

    <TextView
        android:id="@+id/tv_profile_institution"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_profile_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="Institution" />

    <TextView
        android:id="@+id/tv_profile_phone_number"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_profile_institution"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:ems="10"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="Phone number  " />

    <Button
        android:id="@+id/log_out_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/edit_profile_btn"
        android:layout_toEndOf="@+id/imageButton2"
        android:background="@drawable/button_border"
        android:padding="5dp"
        android:text="Log Out"
        android:textColor="@color/colorMainLight" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_profile_name"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/tv_profile_name"
        android:src="@drawable/ic_person" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_profile_institution"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/tv_profile_name"
        android:src="@drawable/ic_work" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_profile_phone_number"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/tv_profile_name"
        android:src="@drawable/ic_phone" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/profile_iv"
        android:layout_alignTop="@+id/imageButton2"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/facebook_icon" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_profile_phone_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/linkedin_icon" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/profile_iv"
        android:layout_alignTop="@+id/imageButton"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/twitter_icon" />

</RelativeLayout>