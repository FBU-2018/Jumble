<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileFragment"
    android:id="@+id/action_view_profile">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="225dp"
        android:text="Name"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="275dp"
        android:text="Institution"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="325dp"
        android:text="Phone Number"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="375dp"
        android:text="Link to Social Media"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/edit_profile_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="Edit" />

    <ImageView
        android:id="@+id/profile_iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@color/black" />

    <TextView
        android:id="@+id/tv_profile_name"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_profile_btn"
        android:layout_alignTop="@+id/textView4"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="Name"
        android:layout_alignRight="@+id/edit_profile_btn" />

    <TextView
        android:id="@+id/tv_profile_institution"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_profile_btn"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="Institution"
        android:layout_alignRight="@+id/edit_profile_btn" />

    <TextView
        android:id="@+id/tv_profile_phone_number"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_profile_btn"
        android:layout_alignTop="@+id/textView5"
        android:ems="10"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="Phone number  "
        android:layout_alignRight="@+id/edit_profile_btn" />

    <TextView
        android:id="@+id/tv_profile_link"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edit_profile_btn"
        android:layout_alignTop="@+id/textView6"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:text="Link to social media"
        android:layout_alignRight="@+id/edit_profile_btn" />
</RelativeLayout>