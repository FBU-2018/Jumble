<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView

        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        card_view:cardCornerRadius="3dp">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_headerJobPic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                card_view:srcCompat="@drawable/button_rounded_corners" />

            <TextView
                android:id="@+id/txtHeader"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gradient_divider"
                android:gravity="center"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="15sp" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                card_view:srcCompat="@drawable/menu_dots_vert_24dp" />

        </android.support.v7.widget.LinearLayoutCompat>


    </android.support.v7.widget.CardView>
</RelativeLayout>

    <!--card_view:contentPadding="@dimen/activity_horizontal_margin"-->